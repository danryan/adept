- controller_name = controller.controller_name
- action_name = controller.action_name
- resource_name = controller_name.classify

%html
  %head
    %meta(charset="utf-8")

    / Uncomment to make IE8 render like IE7
    / meta http-equiv="X-UA-Compatible" content="IE=7"
    
    / Set the viewport width to device width for mobile
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= content_for?(:title) ? yield(:title) : "Adept - Effortless Package Repositories"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag

  %body(data-controller=controller_name data-action=action_name data-resource=resource_name)
    = render 'shared/header'

    .row
      #flash
        = flash_block
    .row
      %header
        - if content_for?(:header)
          = yield :header
    .row
      - if content_for?(:sidebar)
        %aside.three.columns
          = yield :sidebar
        %article.nine.columns
          = yield
      - else
        %article.twelve.columns
          = yield